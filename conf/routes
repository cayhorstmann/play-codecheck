# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /files/data                 controllers.Files.fileData(repo: String ?= "ext", problem: String, level: String ?= "check")

POST    /checkJson					controllers.Check.checkJson()
OPTIONS /checkJson					controllers.Application.preflight()

GET	    /files						controllers.Files.filesHTML(repo: String ?= "ext", problem: String, level: String ?= "check", callback: String ?= null)

POST	/check						controllers.Check.checkHTML()

GET     /echo                        controllers.Echo.echoJson()